{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "*" : ["node_modlues/*"]
        },
        "allowImportingTsExtensions": true,
        "noEmit": true,
    },
    "include": ["src/**/*"]
}